@model UpdateSkillDto
@{
    ViewData["Title"] = "UpdateSkill";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Update Skill</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Update Skill</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <div class="container-fluid">
        <div class="row justify-content-md-center">
            <div class="col-md-11">
                <div class="card card-success">
                    <div class="card-header">
                        <h3 class="card-title">Update Skill Section</h3>
                    </div>
                    <form role="form" method="post">
                        <input type="hidden" asp-for="SkillID"/>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Title">Enter Skill..</label>
                                <input type="text" class="form-control" asp-for="Title" id="Title">
                            </div>
                            <div class="form-group">
                                <label for="Percentage">Enter Skill Level Percentage..</label>
                                <input type="text" class="form-control" asp-for="Percentage" id="Percentage">
                            </div>
                            <div class="card-action">
                                <button class="btn btn-primary">Update Skill Section</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>