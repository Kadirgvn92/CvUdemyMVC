@model CreateAboutDto

@{
    ViewData["Title"] = "CreateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Create About</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Create About</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <div class="container-fluid">
        <div class="row justify-content-md-center">
            <div class="col-md-11">
                <div class="card card-success">
                    <div class="card-header">
                        <h3 class="card-title">Create About Section</h3>
                    </div>
                    <form role="form" method="post">
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Name">Enter name..</label>
                                <input type="text" class="form-control" asp-for="Name" id="Name">
                            </div>
                            <div class="form-group">
                                <label for="Lastname">Enter lastname..</label>
                                <input type="text" class="form-control" asp-for="Lastname" id="Lastname">
                            </div>
                            <div class="form-group">
                                <label for="Address">Enter address..</label>
                                <input type="text" class="form-control" asp-for="Address" id="Address">
                            </div>
                            <div class="form-group">
                                <label for="Phone">Enter phone number..</label>
                                <input type="tel" class="form-control" asp-for="Phone" id="Phone">
                            </div>
                            <div class="form-group">
                                <label for="Mail">Enter e-mail address..</label>
                                <input type="email" class="form-control" asp-for="Mail" id="Mail">
                            </div>
                            <div class="form-group">
                                <label for="Description">Enter description Giriniz</label>
                                <textarea rows="5" class="form-control" asp-for="Description" id="Description"></textarea>
                            </div>
                            <div class="form-group">
                                <label for="Image">Enter Image..</label>
                                <input type="text" class="form-control" asp-for="Image" id="Image">
                            </div>
                            <div class="card-action">
                                <button class="btn btn-primary">Create New About Section</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>