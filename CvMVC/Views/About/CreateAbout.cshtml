@model CreateAboutDto

@{
    ViewData["Title"] = "CreateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content-wrapper">
    <div class="content">
        <div class="container-fluid">
            <h4 class="page-title">Anasayfa Hakkımızda İşlemleri</h4>
            <div class="row">
                <div class="col-md-12">
                    <form method="post">
                        <div class="card">
                            <div class="card-header">
                                <div class="card-title">Yeni Hakkımızda Yazı Girişi</div>
                            </div>
                            <div class="card-body">
                                <div class="form-group">
                                    <label for="Name">Enter name..</label>
                                    <input type="text" class="form-control" asp-for="Name" id="Name">
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="form-group">
                                    <label for="Lastname">Enter lastname..</label>
                                    <input type="text" class="form-control" asp-for="Lastname" id="Lastname">
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="form-group">
                                    <label for="Address">Enter address..</label>
                                    <input type="text" class="form-control" asp-for="Address" id="Address">
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="form-group">
                                    <label for="Phone">Enter phone number..</label>
                                    <input type="tel" class="form-control" asp-for="Phone" id="Phone">
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="form-group">
                                    <label for="Mail">Enter e-mail address..</label>
                                    <input type="email" class="form-control" asp-for="Mail" id="Mail">
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="form-group">
                                    <label for="Description">Enter description Giriniz</label>
                                    <textarea rows="5" class="form-control" asp-for="Description" id="Description"></textarea>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="form-group">
                                    <label for="Image">Enter Image..</label>
                                    <input type="text" class="form-control" asp-for="Image" id="Image">
                                </div>
                            </div>
                            @* 							<div class="card-body">
                            <div class="form-group">
                            <label for="Image">Upload your Image..</label>
                            <input type="file" class="form-control" name="ImageFile" id="ImageFile">
                            <small class="text-muted">Choose an image file</small>
                            <!-- Hidden field to store the file path as a string -->
                            <input type="hidden" class="form-control" asp-for="Image" id="Image" name="Image">
                            </div>
                            </div> *@
                            <div class="card-body">
                                <div class="card-action">
                                    <button class="btn btn-primary">Add New About Section</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>
